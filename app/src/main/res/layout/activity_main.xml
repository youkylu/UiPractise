<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

 <TextView
     android:layout_width="match_parent"
     android:layout_height="45dp"
     android:text="旋转收缩扩展水波纹"
     android:gravity="center"
     android:id="@+id/splash_tv"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="QQ拖拽气泡"
            android:gravity="center"
            android:id="@+id/drag_bubble_tv"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="pathMeasure练习"
            android:gravity="center"
            android:id="@+id/path_measure_tv"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="我的自定义像素适配"
            android:gravity="center"
            android:id="@+id/pixel_adaption_tv"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="我的百分比布局"
            android:gravity="center"
            android:id="@+id/percent_adaption_tv"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="修改density"
            android:gravity="center"
            android:id="@+id/modify_density"/>



    </LinearLayout>
</ScrollView>